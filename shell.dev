{ pkgs ? import <nixpkgs> {} }:
  pkgs.mkShell {
    # Всякие бинарные программы, типа компиляторов
    nativeBuildInputs = with pkgs; [
      cmake
      meson
      ninja
      pkg-config
      clang
    ];
    # Всякие библиотечные зависимости
    buildInputs = with pkgs; [
       openssl
       zlib
       glfw3
       glew
    ];
}

